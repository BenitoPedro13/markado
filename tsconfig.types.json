{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "types-snapshot"
  },
  "include": [
    "src/**/*",
    "prisma/zod/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    ".next",
    "prisma/app/**/*",
    "kysely",
    "prisma/zod-utils"
  ]
} 